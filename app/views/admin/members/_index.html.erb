<!--会員一覧の表示テーブル（管理者）-->
<table class="table table-hover text-center">
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>Eメール</th>
      <th>会員ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% members.each do |member|%>
    <tr>
      <td class="pt-3 pb-3">
        <%= link_to admin_member_path(member) do%>
          <%= attachment_image_tag member, :profile_image, :fill,70,70,fallback: "no_image.jpg", class: "rounded rounded-circle"%> <br>
          <%= member.nickname%>
        <% end %>
      </td>
      <td class="pt-5 pb-5"><%= member.email%></td>
      <td class="pt-5 pb-5">
        <% if member.is_deleted == true%>
          <p class="text-danger">退会</p>
        <% else %>
          <p class="text-success">有効</p>
        <% end %>
      </td>
      <td></td>
    </tr>
  <% end %>
  </tbody>
</table>