<!--マンガの紹介＆感想の詳細ページ（管理者）-->
<div class="container">
  <div class="row">
    <div class="col-9">
      <div class="border border">
        <h3 class="text-center">マンガの紹介＆感想の紹介ぺージ</h3>
      </div>
      <%= render 'show', manga: @manga%>

    </div>
    <div class="col-3">
      <%= render 'admin/members/info', member: @manga.member %>
      <%= link_to 'マンガ評価一覧へ',admin_mangas_path,class: 'btn btn-info btn-block mt-3'%>
      <%= link_to '削除',admin_manga_path(@manga),method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger btn-block'%>
    </div>
  </div>
</div>