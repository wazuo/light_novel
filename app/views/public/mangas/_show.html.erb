<!--マンガ詳細の表示テーブル文-->
<div class="border border pb-2">
  <div class="text-center">
    <h4>タイトル名 : <%= manga.title%></h4>
    <%= attachment_image_tag manga, :image, :fill,300,300%>
  </div>
</div>
<div class="d-flex">
  <div class="border border col-6">
    <div class="text-center" id="comments-count">
      コメント数 : <%= manga.manga_comments.count %>
    </div>
  </div>
  <div class="border border col-6">
    <div class="text-center" id="favorite_btn_<%= manga.id %>">
    <!--いいねボタンの読み込み（非同期化済み）-->
        <%= render 'public/favorites/favorite_btn', manga: manga%>
    </div>
  </div>
</div>
<table class="table table-bordered text-center">
  <thead>
    <tr>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>投稿者</td>
      <td>
        <%= manga.member.nickname%>
      </td>
    </tr>
    <tr>
      <td>評価</td>
      <td>
        <!--星評価-->
        <div id="star-rate-<%= manga.id %>"></div>
        <script>
        $('#star-rate-<%= manga.id %>').empty();
        $('#star-rate-<%= manga.id %>').raty({
          size: 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          half: true,
          readOnly: true,
          score: <%= manga.review %>,
        });
        </script>
      </td>
    </tr>
    <tr>
      <td>紹介</td>
      <td><%= manga.introduction%></td>
    </tr>
    <tr>
      <td>感想</td>
      <td><%= manga.impression%></td>
    </tr>
  </tbody>
</table>