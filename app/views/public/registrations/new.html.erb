<!--会員の新規登録画面-->
<div class="container">
  <h2 class="pb-3">新規登録画面</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row">
        <%= f.label :"名前", class: 'col-md-3 h5' %>
        <%= f.label :"(姓)", class: 'col-md-1 h5' %>
        <%= f.text_field :first_name, autofocus: true,placeholder:'令和', class: '' %>
        <%= f.label :"(名)", class: 'col-md-1 h5' %>
        <%= f.text_field :last_name, autofocus: true,placeholder: '太郎'%>
    </div>
    <div class="row mt-4">
      <%= f.label :"フリガナ", class: 'col-md-3 h5' %>
      <%= f.label :"(セイ)", class: 'col-md-1 h5' %>
      <%= f.text_field :first_name_kana, autofocus: true,placeholder: 'レイワ',class: '' %>
      <%= f.label :"(メイ)", class: 'col-md-1 h5' %>
      <%= f.text_field :last_name_kana, autofocus: true,placeholder: 'タロウ', class: '' %>
    </div>
    <div class="row mt-4">
      <%= f.label :"ニックネーム", class: 'col-md-4 h5' %>
      <%= f.text_field :nickname, autofocus: true, size:'50',placeholder: 'レイタ',class: '' %>
    </div>
    <div class="row mt-4">
      <%= f.label :"Eメール", class: 'col-md-4 h5'%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size: '50',placeholder: 'sample@mail.com',class: '' %>
    </div>

    <div class="row mt-4">
      <%= f.label :"パスワード", class: 'col-md-4 h5' %>
      <%= f.password_field :password, autocomplete: "new-password",placeholder: '6字以上',size: '50', class: 'form-controll' %>
    </div>

    <div class="row mt-4">
      <%= f.label :"パスワード(確認用)", class: 'col-md-4 h5' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: '確認用（記入必須）',size: '50', class: 'form-controll' %>
    </div>

    <div class="form-group row justify-content-center mt-4">
      <%= f.submit "新規登録", class: 'btn btn-success col-12' %>
    </div>
    <% end %>
    <div class="form-group row justify-content-center">
      <%= render "public/shared/links" %>
    </div>
</div>
