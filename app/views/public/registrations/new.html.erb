<!--会員の新規登録画面-->
<div class="container">
    <div class="col">
      <h2>新規登録画面</h2>
   </div>
   <div class="col justify-content-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :"( 姓 )", class: 'col-md-2 form-label' %>
        <%= f.text_field :first_name, autofocus: true, class: 'form-controll' %>
        <%= f.label :"( 名 )" , class: 'col-md-2 form-label'%>
        <%= f.text_field :last_name, autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :"(セイ)", class: 'col-md-2 form-label' %>
        <%= f.text_field :first_name_kana, autofocus: true, class: 'form-controll' %>
        <%= f.label :"(メイ)", class: 'col-md-2 form-label' %>
        <%= f.text_field :last_name_kana, autofocus: true, class: 'form-controll' %>
      </div>
      <div class="form-group">
        <%= f.label :"ニックネーム", class: 'col-md-2 form-label' %>
        <%= f.text_field :nickname, autofocus: true, class: 'form-controll' %>
      </div>
      <div class="form-group">
        <%= f.label :"Eメール", class: 'col-md-2 form-label'%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-controll' %>
      </div>

      <div class="form-group">
        <%= f.label :"パスワード(6字以上)", class: 'col-md-2 form-label' %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-controll' %>
      </div>

      <div class="form-group">
        <%= f.label :"パスワード(確認用)", class: 'col-md-2 form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-controll' %>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit "新規登録", class: 'btn btn-success col-12' %>
      </div>
    <% end %>
    <div class="form-group row justify-content-center">
      <%= render "public/shared/links" %>
    </div>
   </div>
</div>
