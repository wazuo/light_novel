<!--フォローボタン（フォローする、外す）-->
<!--自分にはフォローできない-->
<% unless  current_member == member%>
  <% if current_member.following?(member) %>
  <%= link_to "フォロー外す",member_relationships_path(member.id), method: :delete, class: 'btn btn-danger btn-block'%>
  <% else %>
  <%= link_to "フォローする",member_relationships_path(member.id), method: :post,class: 'btn btn-primary btn-block'%>
  <% end %>
<% end %>