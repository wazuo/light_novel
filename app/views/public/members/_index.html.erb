<!--会員一覧の表示画面-->
  <table class="table table-hover text-center">
    <thead>
      <tr>
        <th>ユーザー名</th>
        <th>自己紹介</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% members.each do |member|%>
      <tr>
        <td class"mx-auto">
          <%= link_to member_path(member) do%>
            <%= attachment_image_tag member, :profile_image, :fill,70,70,fallback: "no_image.jpg", class: "rounded rounded-circle"%> <br>
            <%= member.nickname%>
          <% end %>
        </td>
        <td><%= member.introduction%></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>