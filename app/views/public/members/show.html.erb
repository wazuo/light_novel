<!--会員の詳細ページ-->
<div class="container">
  <div class="row">
    <div class="col">
      <div class="border border">
        <h3 class="text-center"><%= @member.nickname%>さんのプロフィール</h3>
      </div>
      <%= render 'table', member: @member%>
      <% if current_member == @member %>
        <%= link_to 'プロフィール編集',edit_member_path, class: 'btn btn-secondary'%>
        <%= link_to 'マンガ紹介＆感想新規投稿',new_manga_path,class: 'btn btn-success'%>
      <% end %>
      <%= link_to @member.nickname + 'のマンガ評価一覧へ',detail_member_path,class: 'btn btn-primary'%>
      <% if current_member != @member%>
        <%= link_to 'メッセージを送る',message_path(@member)%>
      <% end %>
      <% unless  current_member == @member%>
        <% if current_member.following?(@member) %>
        <%= link_to "フォローを外す",member_relationships_path(@member.id), method: :delete, class: 'btn btn-primary'%>
        <% else %>
        <%= link_to "フォローする",member_relationships_path(@member.id), method: :post,class: 'btn btn-success'%>
        <% end %>
      <% end %>
    </div>
  </div>
</div>